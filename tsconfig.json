{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "outDir": "dist",
    "lib": ["es6", "es2018", "dom", "dom.iterable", "ES2019", "ES2020"],
    "sourceMap": true,
    "rootDir": "src",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "removeComments": true
  },
  "exclude": ["node_modules", ".vscode-c-cpp-runner", "out", "dist"]
}
