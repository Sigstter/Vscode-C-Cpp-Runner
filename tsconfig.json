{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "outDir": "out",
    "lib": ["es6", "dom", "dom.iterable"],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    /* Additional Checks */
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", ".vscode-c-cpp-runner"]
}
