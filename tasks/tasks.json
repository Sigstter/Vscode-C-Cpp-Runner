{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Makefile_Debug",
      "type": "shell",
      "command": ["make"],
      "args": [
        "build",
        "--file=Makefile",
        "--directory=${fileDirname}/",
        "COMPILATION_MODE=Debug",
        "EXECUTABLE_NAME=${fileBasenameNoExtension}Debug"
      ],
      "options": {
        "hide": true
      }
    },
    {
      "label": "Makefile_Release",
      "type": "shell",
      "command": ["make"],
      "args": [
        "build",
        "--file=Makefile",
        "--directory=${fileDirname}/",
        "COMPILATION_MODE=Release",
        "EXECUTABLE_NAME=${fileBasenameNoExtension}Release"
      ],
      "options": {
        "hide": true
      }
    },
    {
      "label": "Debug (Single File)",
      "type": "shell",
      "command": ["make"],
      "args": [
        "build_single",
        "--file=Makefile",
        "--directory=${fileDirname}/",
        "FILE_NAME=${file}",
        "COMPILATION_MODE=Debug",
        "EXECUTABLE_NAME=${fileBasenameNoExtension}Debug"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Release (Single File)",
      "type": "shell",
      "command": ["make"],
      "args": [
        "build_single",
        "--file=Makefile",
        "--directory=${fileDirname}/",
        "FILE_NAME=${file}",
        "COMPILATION_MODE=Release",
        "EXECUTABLE_NAME=${fileBasenameNoExtension}Release"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Debug (Folder)",
      "type": "shell",
      "command": ["make"],
      "args": [
        "clean",
        "--file=Makefile",
        "--directory=${fileDirname}/"
      ],
      "dependsOn": ["Makefile_Debug"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Release (Folder)",
      "type": "shell",
      "command": ["make"],
      "args": [
        "clean",
        "--file=Makefile",
        "--directory=${fileDirname}/"
      ],
      "dependsOn": ["Makefile_Release"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Execute Debug Program",
      "type": "shell",
      "command": ["make"],
      "args": [
        "execute",
        "--file=Makefile",
        "--directory=${fileDirname}/",
        "--quiet",
        "EXECUTABLE_NAME=${fileBasenameNoExtension}Debug"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Execute Release Program",
      "type": "shell",
      "command": ["make"],
      "args": [
        "execute",
        "--file=Makefile",
        "--directory=${fileDirname}/",
        "--quiet",
        "EXECUTABLE_NAME=${fileBasenameNoExtension}Release"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Makefile Clean",
      "type": "shell",
      "command": ["make"],
      "args": [
        "clean",
        "--file=Makefile",
        "--directory=${fileDirname}/",
        "--quiet"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
