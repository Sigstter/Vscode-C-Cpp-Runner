{
  "name": "c-cpp-runner",
  "displayName": "C/C++ Runner",
  "description": "Compile and run your C/C++ code.",
  "version": "0.1.0",
  "publisher": "franneck94",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#9c9c9c",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.53.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "tags": [
    "c",
    "cpp",
    "compile",
    "execute",
    "tasks"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/franneck94/vscode-c-cpp-runner.git"
  },
  "homepage": "https://github.com/franneck94/vscode-c-cpp-runner/README.md",
  "bugs": {
    "url": "https://github.com/franneck94/vscode-c-cpp-runner/issues"
  },
  "activationEvents": [
    "onCommand::workbench.action.tasks.runTask",
    "onCommand:C_Cpp_Runner.run"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "taskDefinitions": [
      {
        "type": "C_Cpp_Runner"
      }
    ],
    "commands": [
      {
        "command": "C_Cpp_Runner.run",
        "title": "Run Command"
      }
    ],
    "keybindings": [
      {
        "command": "C_Cpp_Runner.run",
        "key": "ctrl+shift+r",
        "mac": "ctrl+shift+r"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "C/C++ Runner",
      "properties": {
        "C_Cpp_Runner.enableWarnings": {
          "type": "boolean",
          "default": true,
          "description": "Whether to enable warnings (e.g. -Wall -Wextra -Wpedantic) or not.",
          "scope": "machine-overridable"
        },
        "C_Cpp_Runner.warnings": {
          "type": "string",
          "default": "-Wall -Wextra -Wpedantic",
          "description": "List of warnings to use for the selected compiler.",
          "scope": "machine-overridable"
        },
        "C_Cpp_Runner.warningsAsError": {
          "type": "boolean",
          "default": false,
          "description": "Whether the warnings will be treated as compiler errors.",
          "scope": "machine-overridable"
        },
        "C_Cpp_Runner.compilerPathC": {
          "type": "string",
          "default": "gcc",
          "description": "The path to the C Compiler (either gcc or clang).",
          "scope": "machine-overridable"
        },
        "C_Cpp_Runner.compilerPathCpp": {
          "type": "string",
          "default": "g++",
          "description": "The path to the C++ Compiler (either g++ or clang++).",
          "scope": "machine-overridable"
        },
        "C_Cpp_Runner.makePath": {
          "type": "string",
          "default": "make",
          "description": "The path to the make installation.",
          "scope": "machine-overridable"
        },
        "C_Cpp_Runner.standardC": {
          "type": "string",
          "enum": [
            "",
            "c89",
            "c90",
            "c99",
            "c11",
            "c17",
            "gnu89",
            "gnu90",
            "gnu99",
            "gnu11",
            "gnu17"
          ],
          "default": "c90",
          "description": "C-Standard for the C Compiler.",
          "scope": "machine-overridable"
        },
        "C_Cpp_Runner.standardCpp": {
          "type": "string",
          "enum": [
            "",
            "c++98",
            "c++03",
            "c++11",
            "c++14",
            "c++17",
            "c++20",
            "gnu++98",
            "gnu++03",
            "gnu++11",
            "gnu++14",
            "gnu++17",
            "gnu++20"
          ],
          "default": "c++11",
          "description": "C++ Standard for the Cpp Compiler.",
          "scope": "machine-overridable"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "@types/vscode": "^1.53.0",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "typescript": "^4.0.2",
    "vscode-c-cpp-runner": "^1.4.0"
  }
}
