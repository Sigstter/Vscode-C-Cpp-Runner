{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build: Debug (Folder)",
      "type": "shell",
      "command": ["make"],
      "args": [
        "build",
        "--file=Makefile",
        "--directory=${fileDirname}/",
        "COMPILATION_MODE=Debug",
        "EXECUTABLE_NAME=${fileBasenameNoExtension}Debug"
      ]
    },
    {
      "label": "Build: Release (Folder)",
      "type": "shell",
      "command": ["make"],
      "args": [
        "build",
        "--file=Makefile",
        "--directory=${fileDirname}/",
        "COMPILATION_MODE=Release",
        "EXECUTABLE_NAME=${fileBasenameNoExtension}Release"
      ]
    },
    {
      "label": "Build: Debug (Single File)",
      "type": "shell",
      "command": ["make"],
      "args": [
        "build_single",
        "--file=Makefile",
        "--directory=${fileDirname}/",
        "FILE_NAME=${file}",
        "COMPILATION_MODE=Debug",
        "EXECUTABLE_NAME=${fileBasenameNoExtension}Debug"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Build: Release (Single File)",
      "type": "shell",
      "command": ["make"],
      "args": [
        "build_single",
        "--file=Makefile",
        "--directory=${fileDirname}/",
        "FILE_NAME=${file}",
        "COMPILATION_MODE=Release",
        "EXECUTABLE_NAME=${fileBasenameNoExtension}Release"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Run: Debug Program",
      "type": "shell",
      "command": ["make"],
      "args": [
        "execute",
        "--file=Makefile",
        "--directory=${fileDirname}/",
        "--quiet",
        "COMPILATION_MODE=Debug",
        "EXECUTABLE_NAME=${fileBasenameNoExtension}Debug"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Run: Release Program",
      "type": "shell",
      "command": ["make"],
      "args": [
        "execute",
        "--file=Makefile",
        "--directory=${fileDirname}/",
        "--quiet",
        "COMPILATION_MODE=Release",
        "EXECUTABLE_NAME=${fileBasenameNoExtension}Release"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Clean: Debug Objects",
      "type": "shell",
      "command": ["make"],
      "args": [
        "clean",
        "--file=Makefile",
        "--directory=${fileDirname}/",
        "--quiet",
        "COMPILATION_MODE=Debug"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Clean: Release Objects",
      "type": "shell",
      "command": ["make"],
      "args": [
        "clean",
        "--file=Makefile",
        "--directory=${fileDirname}/",
        "--quiet",
        "COMPILATION_MODE=Release"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
